<script>

jQuery( document ).ready(function( $ ) {

  var scrolling = false;

  var checkArrows = function () {
    var current = $('.imgcontainer').data('current');

    if (current == 2){
      $('.navarrow').show();
      $('.navarrowup').show();
      $('.navarrow').css('display', 'inline-block');
      $('.navarrowup').css('display', 'inline-block');
    }

    if (current == 3){
      $('.navarrow').hide();
    }

    if (current == 1){
      $('.navarrowup').hide();
    }

  };

  var checkScroll = function() {
    var windowScroll = (pageYOffset + ($(window).height() / 2));
    var elementScroll1 = $('#image1').offset().top;
    var elementHeight1 = $('#image1').offset().top + $('#image1').height();
    var elementScroll2 = $('#image2').offset().top;
    var elementHeight2 = $('#image2').offset().top + $('#image2').height();
    var elementScroll3 = $('#image3').offset().top;
    var elementHeight3 = $('#image3').offset().top + $('#image3').height();

    if(!scrolling && windowScroll > elementScroll1 && 
                     windowScroll <= elementHeight1) {
      $('.imgcontainer').data('current', 1);
    }

    if(!scrolling && windowScroll > elementScroll2 && 
                     windowScroll <= elementHeight2) {
      $('.imgcontainer').data('current', 2);
    }

    if(!scrolling && windowScroll > elementScroll3 && 
                     windowScroll <= elementHeight3) {
      $('.imgcontainer').data('current', 3);
    }

    checkArrows();
  };
  $(window).on('scroll', checkScroll);
  checkScroll();
   
  $( ".navarrow" ).click(function() {
    
    var current = $('.imgcontainer').data('current');
    if (current >= 3){
      return;
    } 

    current += 1;
    scrolling = true;

    var nextImage = $('#image' + current);
    $('html, body').animate({
      scrollTop: nextImage.offset().top
    }, 500, 'swing', function() {
      scrolling = false;
    });
    $('.imgcontainer').data('current', current);

    checkArrows();
  });

   
  $( ".navarrowup" ).click(function() {
   
    var current = $('.imgcontainer').data('current');
    if (current === 1){
      return;
    } 

    current -= 1;
    scrolling = true;

    var prevImage = $('#image' + current);
    $('html, body').animate({
      scrollTop: prevImage.offset().top
    }, 500, 'swing', function() {
      scrolling = false;
    });
    $('.imgcontainer').data('current', current);

    checkArrows();
  });
});


</script>













